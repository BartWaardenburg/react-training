{
	"parser": "babel-eslint",
	"plugins": [
 		"eslint-plugin-react"
	 ],
	"rules": {
		"indent": [1, "tab", {"SwitchCase": 1}],
		"quotes": [2, "single"],
		"semi": [2, "always"],
		"block-scoped-var": 2,
		"max-depth": [1, 4],
		"one-var": [1, "never"],
		"max-nested-callbacks": [1, 4],
		"complexity": [1, 8]
	},
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 6,
	    "sourceType": "module",
		"ecmaFeatures": {
  			"jsx": true,
			"modules": true
		}
	},
	"extends": "eslint:recommended"
}
